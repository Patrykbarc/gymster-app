{
  "plugins": ["@typescript-eslint"],
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "^_",  // Ignoruje zmienne lokalne zaczynające się od "_"
        "argsIgnorePattern": "^_"   // Ignoruje argumenty funkcji zaczynające się od "_"
      }
    ],
    "@typescript-eslint/no-explicit-any": "warn"
  }
}
